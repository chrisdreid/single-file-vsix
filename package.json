{
  "name": "single-file-flattener",
  "displayName": "Single-File VSCode Flattener",
  "description": "Flattens codebases using the Single-File tool with full argument selection and pyenv support.",
  "publisher": "corsum",
  "version": "1.1.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "icon": "images/icon.png",
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { "command": "singlefile.run", "title": "Run Single-File" },
      { "command": "singlefile.runLast", "title": "Run Single-File (with last settings)" },
      { "command": "singlefile.configureGlobalDefaults", "title": "Configure Single-File Global Defaults" }
    ],

    "submenus": [
      {
        "id": "singleFileMenu",
        "label": "Single-File"
      }
    ],

    "menus": {
      "commandPalette": [
        {
          "command": "singlefile.configureGlobalDefaults",
          "category": "Single-File",
          "when": "true"
        },
        {
          "command": "singlefile.run",
          "category": "Single-File",
          "when": "true"
        },
        {
          "command": "singlefile.runLast",
          "category": "Single-File",
          "when": "true"
        }
      ],

      "explorer/context": [
        {
          "submenu": "singleFileMenu",
          "when": "explorerResourceIsFolder || resourceFilename",
          "group": "navigation"
        }
      ],

      "singleFileMenu": [
        {
          "command": "singlefile.run",
          "when": "explorerResourceIsFolder || resourceFilename"
        },
        {
          "command": "singlefile.runLast",
          "when": "explorerResourceIsFolder || resourceFilename"
        }
      ]
    }
  },

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.66.0",
    "@types/node": "20.x",
    "typescript": "^5.7.2",
    "eslint": "^9.16.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
